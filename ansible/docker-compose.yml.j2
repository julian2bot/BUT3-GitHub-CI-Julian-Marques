services:
  julian-marques-frontend:
    container_name: julian-marques-frontend
    image: docker.iut.arcanit.io/julian-marques-frontend:latest
    restart: always
    networks: [ traefik ]
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.{{ env }}-julian-marques-frontend.rule=Host(`{{ env }}-julian-marques.iut.arcanit.io`)"
      - "traefik.http.routers.{{ env }}-julian-marques-frontend.entrypoints=https"
      - "traefik.http.routers.{{ env }}-julian-marques-frontend.tls=true"
      - "traefik.http.services.{{ env }}-julian-marques-frontend.loadbalancer.server.port=80"

  julian-marques-backend:
    container_name: julian-marques-backend
    image: docker.iut.arcanit.io/julian-marques-backend:latest
    restart: always
    networks: [ traefik ]
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.{{ env }}-julian-marques-backend.rule=Host(`api-julian-marques.iut.arcanit.io`)"
      - "traefik.http.routers.{{ env }}-julian-marques-backend.entrypoints=https"
      - "traefik.http.routers.{{ env }}-julian-marques-backend.tls=true"
      - "traefik.http.services.{{ env }}-julian-marques-backend.loadbalancer.server.port=80"
    env_file:
      - backend.env
networks:
  traefik:
    external: true
